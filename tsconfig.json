{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    
    // https://github.com/vuejs/vetur/issues/2373#issuecomment-955059744
    "noImplicitThis": false,

    "isolatedModules": true,
    "target": "es2017",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
